<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bmtestv4.android.mohalim.bmtestv4.ResultActivity">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <bmtestv4.android.mohalim.bmtestv4.Result.Circle
            android:id="@+id/circle"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="300dp"
            android:layout_height="300dp"
            >
        </bmtestv4.android.mohalim.bmtestv4.Result.Circle>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_result"
                android:layout_centerInParent="true"
                android:text= "100%"
                android:textSize="70sp"
                android:textColor="#000000"
                android:visibility="invisible"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_all_questions"
            android:layout_alignParentLeft="true"
            android:text="عرض الاسئلة"
            android:background="@drawable/rounded5"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_wrong_question"
            android:layout_alignParentLeft="true"
            android:text="عرض الاسئلة الخطأ"
            android:background="@drawable/rounded5"
            android:layout_alignParentStart="true" />


    </RelativeLayout>




</LinearLayout>
